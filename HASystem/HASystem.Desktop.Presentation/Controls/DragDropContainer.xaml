<UserControl x:Class="HASystem.Desktop.Presentation.Controls.DragDropContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gate="clr-namespace:HASystem.Desktop.Presentation"
             xmlns:controls="clr-namespace:HASystem.Desktop.Presentation.Controls"
             xmlns:local="clr-namespace:HASystem.Desktop.Presentation.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">

    <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
        <controls:DragDropCanvas AllowDragging="True" AllowDrop="True">
            <controls:Gate />
        </controls:DragDropCanvas>
    </ScrollViewer>
</UserControl>
