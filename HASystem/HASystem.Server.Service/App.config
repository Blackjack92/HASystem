<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="HASystem.Server.Remote.Wcf.ServiceImplementation.Status">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:80/v1/Status" />
          </baseAddresses>
        </host>
        <endpoint address="" binding="webHttpBinding" contract="HASystem.Server.Remote.Wcf.ServiceContracts.IStatus" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
      <service name="HASystem.Server.Remote.Wcf.ServiceImplementation.DevicesService">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:80/v1/Devices" />
          </baseAddresses>
        </host>
        <endpoint address="" binding="webHttpBinding" contract="HASystem.Server.Remote.Wcf.ServiceContracts.IDevicesService" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
    </services>
  </system.serviceModel>
</configuration>